.filter_column {
	width 180px
}

.collapse {
	display none
	overflow hidden
	
	&.in {
		display block
	}
}

.collapsing {
		overflow hidden
		transition-timing-function: ease;
		transition-duration: .35s
		transition-property: height, visibility;
}

.product_column {
	
	
	@media (min-width 768px) {
		margin-left 190px 
	}
}

.pop-product {
	margin-bottom 30px
	
	&__header {
		display flex
		align-items center
	}
	
	&__side {
		margin-left auto
		color inherit
		text-decoration none 
		&-icon {
			margin-left 5px
		}
	}

	&__slider {
		margin 0 -4px
		
		@media (min-width 480px) {
			margin 0 -7px 
		}
	}

	&__slide {
		padding 4px
		
		@media (min-width 480px) {
			padding 6px 7px
		}
	}
}

.grid-product {
	margin 0 -7px
	
	@media (min-width 768px) {
		margin 0 -7px 
	}
	
	
	@supports (flex-wrap wrap) {
		display flex
		flex-wrap wrap
		justify-content center
		align-items stretch	
	}
	
	&__item {
		box-sizing border-box
		width 50% 
		padding 4px
		
		@media (min-width 480px) {
			padding 7px 
		}
		
		@media (min-width 768px) {
			width 33%
		}

		@media (min-width 1200px) {
			width 25%
		}
		
		&:last-child {
		}
	}
}

.product-card {
	display block
	padding 15px 0 8px
	box-shadow 0 0 5px rgba(139, 139, 139, 0.42)
	text-align center
	background-color #FFF 
	text-decoration: none;
  color: inherit;
  line-height: 1.2; 
	// box-sizing border-box
		
	@media (min-width 480px) {
		box-shadow 0 0 13px rgba(139, 139, 139, 0.42)
	}
		
	&:hover {
		text-decoration none
	}
		
	&_pr {
		padding 0
		box-shadow none
	}
	
	&__pr {
		width 100%
		height auto
	}
	
	&__title {
		color #818181
		font-size 18px
		padding 0 10px 
	}
	
	&__hr {
		margin 5px 16px 5px
		height 2px
		background-color #818181
		border none
	}
	
	&__price {
		color #101010
		font-size 19px
		font-weight 700 
	}
}

.main_menu_catalog {
	@media (max-width 767px) {
		display none
	}
}

.product_buy_name {
	@media (max-width 570px) {
		display none
	}
}

.product_buy_myself {
	padding-top 5px
	
	@media (min-width 570px) {
		padding 10px  0
	}
}

.calendar {
	top 30%
}